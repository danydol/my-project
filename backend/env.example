# Server Configuration
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Database
DATABASE_URL=postgresql://deployai:password@localhost:5432/deployai

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# GitHub Integration
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:3001/auth/github/callback

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_DEFAULT_REGION=us-east-1

# LLM Integration (Choose one or both)
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
LLM_PROVIDER=openai # or anthropic

# GitOps Repository
GITOPS_REPO_OWNER=your_github_username
GITOPS_REPO_NAME=deploy-ai-gitops
GITOPS_BRANCH=main

# Terraform Configuration
TERRAFORM_STATE_BUCKET=deploy-ai-terraform-state
TERRAFORM_STATE_REGION=us-east-1
TERRAFORM_LOCK_TABLE=deploy-ai-terraform-locks

# ArgoCD Configuration
ARGOCD_SERVER=localhost:8080
ARGOCD_USERNAME=admin
ARGOCD_PASSWORD=your_argocd_password

# Redis (for caching and job queues)
REDIS_URL=redis://localhost:6379

# Monitoring
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_if_using

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100 